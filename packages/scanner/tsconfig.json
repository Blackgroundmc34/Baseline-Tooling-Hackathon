    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["**/*.ts"]
}
